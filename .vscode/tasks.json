{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            }
        },
        {
            "label": "shell",
            "type": "shell",
            "command": {
                "quoting": "strong",
                "value": "./run"
            },
            "args": [
                "0"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
